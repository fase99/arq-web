---
import { Image } from 'astro:assets';
import logo from '../assets/astro.svg';
interface Props {
    variant?: 'header' | 'footer' | 'dark';
}

const { variant = 'header' } = Astro.props;

// Determine the appropriate CSS class based on the variant
const getLogoClass = () => {
    switch (variant) {
        case 'header':
            return 'text-header-logo header-logo';
        case 'footer':
            return 'text-footer-logo header-logo';
        case 'dark':
            return 'text-body-base hover:text-primary';
        default:
            return 'text-body-base hover:text-primary';
    }
};
---

<a href="/" class:list={['logo font-extrabold transition-colors duration-200 ', getLogoClass()]}>
    {
       
    }
    <Image src={logo} alt="" class="hidden" />
    <span class="font-bold">+</span> Arq 
</a>
