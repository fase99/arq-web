---
import Layout from '@layouts/Layout.astro';
import Hero from '@components/sections/Hero.astro';
import SplitPanel from '@components/sections/SplitPanel.astro';
import Features from '@components/sections/Features.astro';
import FeaturesCarousel from '@components/sections/FeaturesCarousel.astro';
import Stats from '@components/sections/Stats.astro';
import { featureLists } from '@data/features';
import { statsLists } from '@data/stats';
import Logos from '@components/sections/Logos.astro';
import { logoLists } from '@data/logos';
import CtaBanner from '@components/sections/CtaBanner.astro';
import Benefits from '@components/sections/Benefits.astro';
import { benefitsLists } from '@data/benefits';
import RecentPosts from '@components/sections/RecentPosts.astro';
import heroImage from '../assets/images/home/home.mp4';
import styleGuideImage from '../assets/images/home/developer.jpg';
import C4Image from '../assets/images/home/c4.png';


const seoTitle = "Bienvenido";
const seoDescription = "+Arq es una empresa de arquitectura y diseño de interiores";

const heroContent = {
    title: '+Arq Consultores',
    description: 'Arquitectura eficiente, moderna y a tu medida. Proyectos, diseño y regularizaciones con mirada profesional.',
    buttons: [
            {
                text: 'Sobre nosotros',
                link: '/nosotros',
                target: '_self'
            },
            {
                text: 'Contáctanos',
                link: '/contact',
                target: '_self'
            }
    ],
    backgroundImage: heroImage,
    overlayOpacity: 0.0
}

const featuresSection = {
    eyebrow: "¿QUÉ OFRECEMOS?",
    title: "Conoce nuestros servicios",
    description: "Ofrecemos soluciones arquitectónicas integrales para personas, empresas y comunidades. Profesionales comprometidos con cada etapa de tu proyecto, desde la idea hasta la ejecución.",
    features: featureLists.main.features,
    button: {
        text: "Ponte en contacto con nosotros",
        link: "/contact",
        variant: "primary" as const
    }
}

const FooterCta = {
    eyebrow: "Join The Community",
    title: "¿Listo para empezar?",
    description: "¡Conversemos! Estamos aquí para ayudarte a llevar tus ideas al siguiente nivel. Contáctanos y descubre cómo podemos hacer realidad tu proyecto.",
    hideCta: false, 
    button: {
        text: "Contáctanos",
        link: "/contact",
        target: "_self"
    }
}

const styleGuideSection = {
    eyebrow: "¿Por qué confiar en nosotros?",
    headline: "Tu Socio en arquitectura y diseño",
    description: "En +Arq, nos dedicamos a convertir tus ideas en realidad. Nuestro equipo de expertos está listo para guiarte en cada paso del proceso.",
    image: {
        src: C4Image
    }
}

const logosSection = {
    eyebrow: "Our Clients",
    logos: logoLists.main.logos
}

const benefitsSection = {
    ...benefitsLists.main,
    background: 'base' as const
}

---

<Layout footerCta={FooterCta} title={seoTitle} description={seoDescription}>
    <Hero content={heroContent} />
    <FeaturesCarousel content={featuresSection} padding="base" background="light" carouselType="swiper" />
    <!-- <RecentPosts content={recentPostsSection} background="base" padding="base" postsToShow={3} category="Theme Usage"/> -->
    <Benefits content={benefitsSection} background="dark" padding="base" />
    <SplitPanel content={styleGuideSection} imagePosition="right" background="light" padding="base" />
    <!-- <CtaBanner content={mainCta} variant="contained" background="light" paddingBottom="base" /> -->
    <Logos content={logosSection} background="base" padding='small'/>
    <!-- <Stats content={sideBySideStats} background='dark' padding="base"/> -->
</Layout>