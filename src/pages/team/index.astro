---
import Layout from '@layouts/Layout.astro';
import InnerHero from '@components/sections/InnerHero.astro';
import AboutSection from '@components/sections/AboutSection.astro';
import arquitecturaImage from '@assets/images/edificio.jpg';

const seoTitle = "Sobre Nosotros";
const seoDescription = "Conoce más sobre nuestra empresa de arquitectura.";

const heroContent = {
    title: "Sobre Nosotros",
    description: "Conoce más sobre nuestra empresa de arquitectura.",
}

const aboutContent = {
    title: "Somos especialistas",
    description: "En +Arq ofrecemos soluciones arquitectónicas integrales para personas, empresas y comunidades. Profesionales comprometidos con cada etapa de tu proyecto.",
    quieness: "Nuestra consultoría le ofrece soluciones personalizadas para optimizar su negocio, combinando un análisis meticuloso y estrategias innovadoras para impulsar su crecimiento y eficiencia."
}
---

<Layout title={seoTitle} description={seoDescription}>
    <InnerHero content={heroContent}  />
    <AboutSection title={aboutContent.title} 
    description={aboutContent.description} 
    mision={aboutContent.quieness} 
    image={arquitecturaImage}
    padding="base" />
</Layout>